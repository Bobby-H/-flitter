<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
        <div class="panel-body">
          <strong><p><%= current_user.username %></p></strong>
        </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <p>Trends</p>
      </div>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="panel panel-default">
        <div class="panel-heading">
          <div class="container">
           <form class="navbar-form navbar-navbar" role="search">
             <div class="form-group has-feedback">
               <input type="text" class="form-control" placeholder="What's Happening?" />
               <i class="glyphicon glyphicon-camera form-control-feedback"></i>
             </div>
           </form>
          </div>
        </div>
        <div class="panel-body">
          <center>
            <% for @p in @posts %>
              <div class="panel panel-default">
                  <div class="panel-body">
                    <p><%= @p.content %></p>
                  </div>
              </div>
            <% end %>
          </center>
        </div>
    </div>
  </div>
  <div class="col-xs-3">
    <div class="panel panel-default">
        <div class="panel-body">
          <p>About</p>
        </div>
    </div>
  </div>
</div>
